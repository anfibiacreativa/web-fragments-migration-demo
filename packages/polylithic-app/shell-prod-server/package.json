{
  "name": "@demongbe/prod-server",
  "version": "1.0.0",
  "description": "Prod server for the angular app bootstrapping the fragments",
  "main": "dist/app.js",
  "type": "module",
  "private": true,
  "scripts": {
    "start:server": "node dist/app.js",
    "dev": "ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test:e2e": "npx playwright test"
  },
  "dependencies": {
    "@gofunky/trumpet": "^3.0.3",
    "express": "^5.0.1",
    "htmlrewriter": "^0.0.12",
    "web-fragments": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "prod-server",
    "web-fragments-shell"
  ],
  "author": "Natalia Venditto",
  "license": "MIT"
}
